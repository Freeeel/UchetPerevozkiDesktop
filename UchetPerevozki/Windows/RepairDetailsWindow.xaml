<Window x:Class="UchetPerevozki.Windows.RepairDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetPerevozki.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="15"
        Title="Детали заявки на ремонт" Height="500" Width="600">
    
    <StackPanel Margin="10" HorizontalAlignment="Center">

        <TextBlock  Text="ID:"  Margin="5"/>
        <TextBox  Name="IdTextBlock" Style="{StaticResource RoundedTextBoxStyle}" Height="32" FontSize="14" IsReadOnly="True" Margin="10 0" Width="390"/>

        <TextBlock  Text="Описание:"  Margin="5 20 0 5"/>
        <TextBox  Name="DescriptionTextBlock" Style="{StaticResource RoundedTextBoxStyle}" Height="32" FontSize="14" IsReadOnly="True" Margin="10 0" Width="390"/>

        <TextBlock  Text="Дата и время:"  Margin="5 20 0 5"/>
        <TextBox Name="DateTimeTextBlock"  Style="{StaticResource RoundedTextBoxStyle}" Height="32" FontSize="14" IsReadOnly="True" Margin="10 0" Width="390"/>

        <TextBlock  Text="Пользователь:"  Margin="5 20 0 5"/>
        <TextBox  Name="UserNameTextBlock" Style="{StaticResource RoundedTextBoxStyle}" Height="32" FontSize="14" IsReadOnly="True" Margin="10 0" Width="390"/>

        <TextBlock  Text="Статус:"  Margin="5 20 0 5"/>
        <TextBox Name="StatusTextBox" Style="{StaticResource RoundedTextBoxStyle}" Height="32" FontSize="14" IsReadOnly="True" Margin="10 0" Width="390"/>
        <Grid Margin="0 30">
            <Button Name="CompleteRepairButton"  Content="Завершить заявку" HorizontalAlignment="Right" Margin="0 0 30 0" Click="CompleteRepairButton_Click" Style="{StaticResource GreenRoundedButtonStyle}"/>
            <Button Name="BackButton"  Content="Назад" HorizontalAlignment="Left" Margin="30 0 0 0" Click="BackButton_Click" Style="{StaticResource RoundedButtonStyle}" Width="100" />
        </Grid>
    </StackPanel>
</Window>
