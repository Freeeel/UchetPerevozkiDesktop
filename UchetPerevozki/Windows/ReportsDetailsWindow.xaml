<Window x:Class="UchetPerevozki.Windows.ReportsDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetPerevozki.Windows"
        mc:Ignorable="d"
        FontSize="15"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Детали отчёта" Height="720" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="5 10">
            <TextBlock Text="Общая информация" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <StackPanel Width="412" Margin="0 10 0 0">

                <TextBlock Text="ID" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                <TextBox Name="IdTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Дата создания" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="DateCreateTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Пункт отправления" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="DepartureTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Тип пункта отправления" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="TypeDepartureTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Отправитель" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="SenderTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Пункт назначения" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="DestinationTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Тип пункта назначения" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="TypeDestinationTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Получатель" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="RecipientTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Перевозчик" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 15 0 0"/>
                <TextBox Name="TransporterTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>
            </StackPanel>
            <Button Name="BackButton" Content="Назад" Style="{StaticResource RoundedButtonStyle}"
                Margin="10 20" Width="100" Height="35"/>
        </StackPanel>

        <!-- Вторая колонка - Информация о грузе -->
        <StackPanel Margin="5 10" Grid.Column="1">
            <TextBlock Text="Информация о грузе" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <StackPanel Width="412" Margin="0 10 0 0">

                <TextBlock Text="Вид древесины" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                <TextBox Name="ViewTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Ассортимент древесины" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="AssortementTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Длина древесины" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="LenghtTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Объём древесины" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="VolumeTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>

                <TextBlock Text="Сорт дерева" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                <TextBox Name="SortTB" Style="{StaticResource RoundedTextBoxStyle}" 
                     Height="32" FontSize="14" IsReadOnly="True" 
                     Margin="10 0" Width="390"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
