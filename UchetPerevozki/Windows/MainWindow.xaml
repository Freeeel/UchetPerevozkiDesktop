<Window x:Class="UchetPerevozki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetPerevozki"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1380">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Боковая панель -->
            <ColumnDefinition Width="*"/>
            <!-- Основная область -->
        </Grid.ColumnDefinitions>

        <!-- Боковая панель -->
        <StackPanel Background="#4CAF50">
            <Image Source="C:\Users\Дмитрий\Desktop\иконки\iconProfile.png" Width="120" Height="106" Margin="0,70,0,0"/>
            <TextBlock Text="Войдите в профиль" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" />
            <Button Background="#00000000" BorderBrush="#00000000" BorderThickness="0" Width="230"   >
                <Image Source="C:\Users\Дмитрий\Desktop\иконки\historyReports.png" Stretch="Fill" Margin="0,65,0,0" />
            </Button>
            <Button Background="#00000000" BorderBrush="#00000000" BorderThickness="0" Width="230"   >
                <Image Source="C:\Users\Дмитрий\Desktop\иконки\personal.png" Stretch="Fill" Margin="0,20,0,0" />
            </Button>
            <Button Background="#00000000" BorderBrush="#00000000" BorderThickness="0" Width="230"   >
                <Image Source="C:\Users\Дмитрий\Desktop\иконки\repairs.png" Stretch="Fill" Margin="0,20,0,0" />
            </Button>
        </StackPanel>

        <Grid Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#484848" CornerRadius="10" Padding="20" Width="652" Height="510">
                <StackPanel >
                    <TextBlock Text="Авторизация" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
                        <TextBlock Text="Логин" Foreground="White"  HorizontalAlignment="Center" FontSize="26" Margin="0,0,0,10" />
                        <Border Background="#4CAF50" CornerRadius="10" Padding="5" HorizontalAlignment="Center" Width="338" Height="55">
                            <TextBox x:Name="loginTextBox" Background="Transparent" BorderThickness="0" Padding="10" Foreground="White" FontSize="16"/>
                        </Border>

                        <TextBlock Text="Пароль" Foreground="White"  HorizontalAlignment="Center" FontSize="26" Margin="0,20,0,10" />
                        <Border Background="#4CAF50" CornerRadius="10" Padding="5" HorizontalAlignment="Center" Width="338" Height="55">
                            <PasswordBox x:Name="passwordTextBox" Background="Transparent" BorderThickness="0" Padding="10" Foreground="White" FontSize="16"/>
                        </Border>
                    </StackPanel>
                    <CheckBox Content="Запомнить меня" HorizontalAlignment="Center" Foreground="White" Margin="0,20,0,0"/>

                    <Button Content="Войти" Background="#4CAF50"  Foreground="White" Width="158" Height="50" Margin="0,40,0,0" HorizontalAlignment="Center" Click="btnLoginClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="10">
                                                <!-- Устанавливаем радиус закругления -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="Забыли пароль?" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
